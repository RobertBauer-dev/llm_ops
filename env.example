# LLM-Ops Environment Configuration
# Kopiere diese Datei zu .env und f√ºlle deine eigenen Werte ein

# Environment
ENVIRONMENT=development
DEBUG=true

# API Keys (ersetze mit deinen eigenen Keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here

# Model Configuration
DEFAULT_MODEL=gpt-4
DEFAULT_PROVIDER=openai

# Model Registry
MODEL_REGISTRY_URI=sqlite:///./models.db
MLFLOW_TRACKING_URI=http://localhost:5000

# Monitoring
PROMETHEUS_PORT=8000
GRAFANA_URL=http://localhost:3000

# Database
DATABASE_URL=sqlite:///./llm_ops.db
REDIS_URL=redis://localhost:6379

# Cost Management
COST_ALERT_THRESHOLD=100.0
TOKEN_COST_TRACKING=true

# A/B Testing
AB_TEST_ENABLED=true
AB_TEST_TRAFFIC_SPLIT=0.5

# Prompt Engineering
PROMPT_VERSIONING_ENABLED=true
PROMPT_CACHE_TTL=3600

# Evaluation
EVALUATION_DATASET_PATH=data/evaluation/
EVALUATION_METRICS=accuracy,latency,cost,user_satisfaction

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=4000
